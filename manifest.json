{
  "name": "MP4 Inspector",
  "version": "1.0",
  "description": "Inspect MP4 Boxes from the Network tab!",
  "manifest_version": 3,
  "devtools_page": "html/main.html",
  "permissions": [
    "webRequest", "scripting"
  ],
  "host_permissions": ["*://localhost/*"],
  "externally_connectable": {
    "matches": ["*://localhost/*"]
  },
  "commands": {
    "reload": {
      "description": "Reloads the content page",
      "suggested_key": {
        "default": "Ctrl+R",
        "windows": "Ctrl+R",
        "mac": "Command+R"
      }
    }
  }
}
